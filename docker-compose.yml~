version: '3.8'

services:
  sqlserver:
    image: mcr.microsoft.com/mssql/server:2019-latest
    environment:
      - ACCEPT_EULA=Y
      - SA_PASSWORD=Ram!123taty1012
      - MSSQL_PID=Express
    ports:
      - "1433:1433"
    volumes:
      - sqlserver-data:/var/opt/mssql
    networks:
      - product-api-network
    healthcheck:
      test: ["CMD-SHELL", "/opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P Ram!123taty1012 -Q 'SELECT 1'"]
      interval: 10s
      timeout: 5s
      retries: 5

networks:
  product-api-network:
    driver: bridge

volumes:
  sqlserver-data:
